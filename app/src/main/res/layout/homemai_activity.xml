<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/home_main_bottom_relat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/text_black_alpha6" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/main_tabbar_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/tab_home_selector2"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="7dp"
                android:text="货款"
                android:textColor="@color/tab_text_font"
                android:textSize="@dimen/textSize13sp" />

            <RadioButton
                android:id="@+id/main_tabbar_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/tab_home_money2"
                android:gravity="center"
                android:paddingBottom="4dp"

                android:paddingTop="7dp"
                android:text="信用卡"
                android:textColor="@color/tab_text_font"
                android:textSize="@dimen/textSize13sp" />

            <RadioButton
                android:id="@+id/main_tabbar_faxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/tab_home_personal2"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="7dp"
                android:text="发现"
                android:textColor="@color/tab_text_font"
                android:textSize="@dimen/textSize13sp" />
            <RadioButton
                android:id="@+id/main_tabbar_luntan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/tab_home_personal2"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="7dp"
                android:text="论坛"
                android:textColor="@color/tab_text_font"
                android:textSize="@dimen/textSize13sp" />
            <RadioButton
                android:id="@+id/main_tabbar_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@null"

                android:drawablePadding="4dp"
                android:drawableTop="@drawable/tab_home_personal2"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="7dp"
                android:text="我的"
                android:textColor="@color/tab_text_font"
                android:textSize="@dimen/textSize13sp" />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/homepage_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_main_bottom_relat"

        />


</RelativeLayout>
