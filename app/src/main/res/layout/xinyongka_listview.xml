<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/xinyongka_iamgeview"
                android:layout_width="120dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dip"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:weightSum="2"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                >
                <TextView
                    android:id="@+id/xyk_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火影忍者卡"
                    android:textColor="@color/text_blanck_color"
                    android:textSize="@dimen/textSize13sp"
                    android:layout_weight="1"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="15dip"
                    >
                    <TextView
                        android:id="@+id/xinyongka_text1"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xinyongka_redback"
                        android:text="青年首选"
                        android:textSize="@dimen/textSize12sp"
                        android:textColor="@color/text_red_color"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="5dip"
                        />
                    <TextView
                        android:id="@+id/xinyongka_text2"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xinyongka_redback"
                        android:text="免息分期"
                        android:textSize="@dimen/textSize12sp"
                        android:textColor="@color/text_red_color"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginLeft="5dip"
                        />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐理由:"
                android:textColor="@color/text_red_color"
                android:textSize="@dimen/textSize13sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/xinyongka_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年轻人的首选"
                android:textColor="@color/text_blanck_color"
                android:textSize="@dimen/textSize13sp"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/home_list_xuxian"
            android:layout_marginTop="7dip"

            ></View>

    </LinearLayout>

</LinearLayout>
