<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    >

    <include layout="@layout/my_actionbar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dip"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/text_blanck_color"
            android:textSize="@dimen/textSize14sp"
            android:layout_marginLeft="15dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="14dip"
            android:paddingTop="5dip"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/textSize25sp"
                android:textColor="@color/text_blanck_color"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/tixian_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22.66"
                android:textSize="@dimen/textSize25sp"
                android:textColor="@color/text_blanck_color"
                android:background="@null"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/bg"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            ></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dip"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可提现金额:"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/textSize14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22.50元"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_marginLeft="2dip"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="75dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:text="全部转出"
                android:background="@drawable/yuanjiao_blue"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:textSize="@dimen/textSize12sp"
                />

        </RelativeLayout>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:text="满10元可提现，提现无上限。\n 每次提现金额必须是整数\n确认提现后1个月"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="12dip"
        />



    <TextView
        android:id="@+id/tixian_btnok"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/yuanjiao_blue_scrol"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:text="确认提现"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14sp"
        android:gravity="center"
        android:layout_marginTop="15dip"
        />


</LinearLayout>
