<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/welcome_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        >


        <LinearLayout
            android:id="@+id/location_centel_layout"
            android:layout_width="60dip"
            android:layout_height="28dip"
            android:orientation="horizontal"
            android:background="@drawable/yuanjiao_welcome_gray"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textview_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="5"
                android:background="#76797c"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/location_centel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:text="s跳过"
                android:textSize="@dimen/textSize12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dip"
                />


        </LinearLayout>



        <TextView
            android:id="@+id/text_view_advertise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/location_centel_layout"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"
        android:visibility="visible"
        />



</RelativeLayout>
