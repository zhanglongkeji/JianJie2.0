<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include layout="@layout/my_actionbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/znpp_details_lijisq_btn"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@drawable/yuanjiao_blue_scrol"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginBottom="10dip"
            android:text="立即申请"
            android:textSize="@dimen/textSize15sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_above="@id/znpp_details_lijisq_btn"
            >

            <RelativeLayout
                android:id="@+id/myznpp_details_countrelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mytouming_cungt2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/my_touming_ceng"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:background="@color/white"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dip"
                            android:orientation="horizontal"

                            >

                            <ImageView
                                android:id="@+id/product_details_img"
                                android:layout_width="46dip"
                                android:layout_height="46dip"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dip"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="2"
                                android:layout_marginLeft="10dip"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    >

                                    <TextView
                                        android:id="@+id/product_details_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="十万火急-马上贷"
                                        android:textSize="@dimen/textSize14sp"
                                        android:textColor="@color/text_blanck_color"
                                        android:layout_marginTop="5dip"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="4dp"
                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="成功率"
                                            android:textSize="@dimen/textSize12sp"
                                            android:textColor="@color/text_gray_color"
                                            />
                                        <TextView
                                            android:id="@+id/product_details_hkfangshi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="分期"
                                            android:layout_marginLeft="5dip"
                                            android:textSize="@dimen/textSize12sp"
                                            android:textColor="@color/text_gray_color"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/product_details_rililv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="信用贷"
                                        android:textSize="@dimen/textSize12sp"
                                        android:textColor="@color/text_blue_color"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.75%"
                                        android:layout_marginLeft="5dip"
                                        android:textSize="@dimen/textSize12sp"
                                        android:textColor="@color/text_blue_color"
                                        android:visibility="gone"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="12dip"
                            >
                            <TextView
                                android:id="@+id/product_details_sqrs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1502666"
                                android:textColor="@color/text_yellow_home_color"
                                android:textSize="@dimen/textSize12sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人成功申请"
                                android:textColor="@color/text_gray_color"
                                android:textSize="@dimen/textSize12sp"
                                />
                        </LinearLayout>

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_10"
                        android:background="@color/bg"
                        ></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dip"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="15dip"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="金额"
                                android:textColor="@color/text_blue_color"
                                android:textSize="@dimen/textSize14sp"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dip"
                                android:orientation="horizontal"
                                android:background="@drawable/yuanjiao_blue"
                                android:layout_marginLeft="5dip"

                                >


                                <TextView
                                    android:id="@+id/zhineng_yuantext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="元"
                                    android:textColor="@color/text_blue_color"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dip"
                                    android:textSize="@dimen/textSize12sp"
                                    />

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="30dip"
                                    android:background="@null"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_blanck_color"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="4dip"
                                    android:layout_toLeftOf="@id/zhineng_yuantext"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:hint="请输入金额"
                                    />


                            </RelativeLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="@color/fengexian_color"
                            android:layout_marginLeft="8dip"
                            android:layout_marginRight="8dip"
                            android:layout_marginTop="12dip"
                            android:layout_marginBottom="12dip"
                            ></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="15dip"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="期限"
                                android:textColor="@color/text_blue_color"
                                android:textSize="@dimen/textSize14sp"
                                />


                            <RelativeLayout
                                android:id="@+id/znpp_details_qxrelayout"
                                android:layout_width="match_parent"
                                android:layout_height="35dip"
                                android:orientation="horizontal"
                                android:background="@drawable/yuanjiao_blue"
                                android:layout_marginLeft="5dip"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:visibility="visible"
                                >

                                <ImageView
                                    android:id="@+id/zhineng_yuantext2"
                                    android:layout_width="16dip"
                                    android:layout_height="15dip"
                                    android:textColor="@color/text_blue_color"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dip"
                                    android:src="@mipmap/ic_down"
                                    android:textSize="@dimen/textSize12sp"
                                    />

                                <TextView
                                    android:id="@+id/znpp_details_qixian_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dip"
                                    android:background="@null"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_blanck_color"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="4dip"
                                    android:layout_toLeftOf="@id/zhineng_yuantext2"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:hint="选择期限"
                                    />


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_1"
                        android:background="@color/bg"
                        ></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dip"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:layout_marginTop="3dip"
                            android:layout_marginBottom="3dip"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="贷款范围:"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000-10000元"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    android:layout_marginLeft="3dip"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最快放款时间:"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1小时"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    android:layout_marginLeft="3dip"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dip"
                            android:layout_marginTop="3dip"
                            android:layout_marginBottom="3dip"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="借款期限:"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3-12个月"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    android:layout_marginLeft="3dip"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="利率范围:"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1%-2.5%"
                                    android:textSize="@dimen/textSize12sp"
                                    android:textColor="@color/text_gray_color"
                                    android:layout_marginLeft="3dip"
                                    />

                                <ImageView
                                    android:id="@+id/znpp_details_lilvfw_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/homepage_listitem_djs"
                                    android:layout_marginLeft="5dip"
                                    />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_10"
                        android:background="@color/bg"
                        ></View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="办理流程"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize14sp"
                            android:layout_marginLeft="15dip"
                            android:layout_gravity="center_vertical"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(查看攻略)"
                            android:textColor="@color/text_red_color"
                            android:textSize="@dimen/textSize12sp"
                            android:layout_marginLeft="5dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_0.5"
                        android:background="@color/fengexian_color"
                        ></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dip"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        >



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_10"
                        android:background="@color/fengexian_color"
                        ></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:text="申请条件"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize14sp"
                            android:paddingLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_0.5"
                            android:background="@color/fengexian_color"
                            ></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="申请条件1234124235344363414235235465867978978078070707880"
                            android:minLines="4"
                            android:lineSpacingExtra="3dip"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize12sp"
                            android:paddingLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_10"
                            android:background="@color/fengexian_color"
                            ></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:text="所需材料"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize14sp"
                            android:paddingLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_0.5"
                            android:background="@color/fengexian_color"
                            ></View>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="申请条件1234124235344363414235235465867978978078070707880"
                            android:minLines="4"
                            android:lineSpacingExtra="3dip"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize12sp"
                            android:paddingLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_10"
                            android:background="@color/fengexian_color"
                            ></View>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:text="申请情况"
                            android:textColor="@color/text_gray_color"
                            android:textSize="@dimen/textSize14sp"
                            android:paddingLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_0.5"
                            android:background="@color/fengexian_color"
                            ></View>

                        <com.zlkj.jianjie.myview.MyListView
                            android:id="@+id/znpp_details_mylistview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:listSelector="#00000000"
                            android:cacheColorHint="#00000000"
                            android:divider="@null"
                            android:scrollbars="none"
                            android:dividerHeight="@null"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            />

                    </LinearLayout>



                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>


</LinearLayout>
