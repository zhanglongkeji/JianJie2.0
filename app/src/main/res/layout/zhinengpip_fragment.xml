<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/my_actionbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mytouming_cungt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/my_touming_ceng"
            android:scaleType="fitXY"
            />

    <LinearLayout
        android:id="@+id/zhinengpp_mycounglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dip"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="15dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/textSize14sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:background="@drawable/yuanjiao_blue"
                    android:layout_marginLeft="5dip"

                    >


                    <TextView
                        android:id="@+id/zhineng_yuantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/text_blue_color"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dip"
                        android:textSize="@dimen/textSize12sp"
                        />

                    <TextView
                        android:id="@+id/zhinengpp_fragment_shurumoney"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:background="@null"
                        android:textSize="@dimen/textSize12sp"
                        android:textColor="@color/text_blanck_color"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="4dip"
                        android:layout_toLeftOf="@id/zhineng_yuantext"
                        android:layout_centerVertical="true"
                        android:gravity="center"

                        />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/fengexian_color"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="15dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期限"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/textSize14sp"
                    />

                <RelativeLayout
                    android:id="@+id/zhinengpp_qixian_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:orientation="horizontal"
                    android:background="@drawable/yuanjiao_blue"
                    android:layout_marginLeft="5dip"
                    >

                    <ImageView
                        android:id="@+id/zhineng_yuantext_month"
                        android:layout_width="15dip"
                        android:layout_height="10dip"
                        android:src="@mipmap/img_black_two"
                        android:textColor="@color/text_blue_color"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dip"
                        />

                    <TextView
                        android:id="@+id/zhinengpp_qixian_textval"
                        android:layout_width="match_parent"
                        android:layout_height="30dip"
                        android:background="@null"
                        android:textSize="@dimen/textSize12sp"
                        android:textColor="@color/text_blanck_color"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="4dip"
                        android:layout_toLeftOf="@id/zhineng_yuantext_month"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="不限"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <!-- <com.zlkj.jianjie.myview.DropDownMenu
             android:id="@+id/zhinengpp_dropdowenu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:ddmenuTextSize="@dimen/textSize12sp"
             app:ddtextUnselectedColor="@color/text_blanck_color"
             app:ddtextSelectedColor="@color/text_blue_color"
             app:dddividerColor="@color/text_gray_color"
             app:ddunderlineColor="@color/bg"
             app:ddmenuSelectedIcon="@mipmap/location_down"
             app:ddmenuUnselectedIcon="@mipmap/location_down"
             app:ddmenuBackgroundColor="@color/white"
             app:ddmaskColor="@color/text_red_color"
             ></com.zlkj.jianjie.myview.DropDownMenu>-->

        <LinearLayout
            android:id="@+id/zhinengpp_xuanzecount_layout"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/white"
            >
            <LinearLayout
                android:id="@+id/zhinengpp_ywxiyk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.97"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/zhinengpp_ywxyk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有无信用卡"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/text_blanck_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_down"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dip"
                    />

            </LinearLayout>


            <View
                android:layout_width="@dimen/space_0.5"
                android:layout_height="match_parent"
                android:background="@color/text_blue_color"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                ></View>

            <LinearLayout
                android:id="@+id/zhinengpp_hkfs_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.97"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/zhinengpp_hkfs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/text_blanck_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_down"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dip"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/space_0.5"
                android:layout_height="match_parent"
                android:background="@color/text_blue_color"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                ></View>

            <LinearLayout
                android:id="@+id/zhinengpp_mrpx_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.97"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/zhinengpp_morempx_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认排序"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/text_blanck_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_down"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dip"
                    />

            </LinearLayout>

            <View
                android:layout_width="@dimen/space_0.5"
                android:layout_height="match_parent"
                android:background="@color/text_blue_color"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                ></View>

            <LinearLayout
                android:id="@+id/zhinengpp_shaix_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1.09"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textSize="@dimen/textSize12sp"
                    android:textColor="@color/text_blanck_color"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_down"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dip"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/bg"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/zhinengpp_touming_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/my_touming_ceng"
                android:scaleType="fitXY"
                android:visibility="gone"
                />

        <com.zlkj.jianjie.myview.PullToRefreshView
            android:id="@+id/zhinengpp_pulltoresreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <com.zlkj.jianjie.myview.MyListView
                        android:id="@+id/zhinengpp_mylistview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:listSelector="#00000000"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:scrollbars="none"
                        android:dividerHeight="@null"
                        >

                    </com.zlkj.jianjie.myview.MyListView>

                </LinearLayout>

            </ScrollView>

        </com.zlkj.jianjie.myview.PullToRefreshView>

        </RelativeLayout>


    </LinearLayout>

    </RelativeLayout>

</LinearLayout>
