<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    >

    <include layout="@layout/my_actionbar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dip"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="23dip"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_dkjl"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                />


            <EditText
                android:id="@+id/login_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:background="@null"
                android:layout_marginLeft="8dip"
                android:paddingLeft="5dp"
                android:layout_marginRight="10dip"
                android:inputType="number"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/text_blanck_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dip"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="1dip"
            >
            <ImageView
                android:layout_width="23dip"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_dkjl"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                >


                <TextView
                    android:id="@+id/login_btncode"
                    android:layout_width="90dip"
                    android:layout_height="35dip"
                    android:text="获取验证码"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/yuanjiao_img_retore_blue"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="1dip"
                    android:paddingBottom="1dip"
                    android:layout_marginTop="8dip"
                    android:layout_marginBottom="8dip"
                    android:textColor="@color/text_blue_color"
                    android:textSize="@dimen/textSize12sp"
                    />



                <EditText
                    android:id="@+id/login_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@id/login_btncode"
                    android:textSize="@dimen/textSize14sp"
                    android:textColor="@color/text_blanck_color"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码"
            android:textSize="@dimen/textSize14sp"
            android:textColor="@color/text_gray_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dip"
            android:gravity="center_vertical"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="(选填)"
                android:textSize="@dimen/textSize14sp"
                android:layout_marginLeft="5dip"
                android:paddingLeft="5dip"
                android:layout_marginRight="15dip"
                android:paddingRight="8dip"
                />

    </LinearLayout>


    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/yuanjiao_btn"
        android:text="登录"
        android:textSize="@dimen/textSize15sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        />



</LinearLayout>
