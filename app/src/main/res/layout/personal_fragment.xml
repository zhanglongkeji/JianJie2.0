<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/text_blue_color"
                >
                <RelativeLayout
                    android:id="@+id/personal_fragment_toprelayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        >
                        <ImageView
                            android:layout_width="80dip"
                            android:layout_height="80dip"
                            android:src="@mipmap/default_head"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/personal_userid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账户ID"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize15sp"
                                android:layout_marginTop="15dip"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/personal_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15666666666"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize15sp"

                                />
                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/back_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dip"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <LinearLayout
                        android:id="@+id/personal_account_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="99999"
                            android:textSize="@dimen/textSize13sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账户余额"
                            android:textSize="@dimen/textSize13sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dip"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/space_0.5"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="12dip"
                        android:layout_marginBottom="12dip"
                        ></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="66666"
                            android:textSize="@dimen/textSize13sp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的积分"
                            android:textSize="@dimen/textSize13sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="5dip"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/fengexian_color"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_10"
                    android:background="@color/fengexian_color"
                    ></View>

                <RelativeLayout
                    android:id="@+id/personal_dkj22"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_dkjl"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邀请好友得现金"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/personal_yqhylhb_rightimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_red_color"
                        android:textSize="@dimen/textSize13sp"
                        android:text="领取5元红包"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/personal_yqhylhb_rightimg"
                        android:layout_marginRight="8dip"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/fengexian_color"
                    ></View>

                <RelativeLayout
                    android:id="@+id/personal_dkjl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_dkjl"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="贷款记录"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/fengexian_color"
                    ></View>


                <RelativeLayout
                    android:id="@+id/personal_xiaoxi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_message"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的消息"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/personal_mymessage_rightimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/homepage_listitem_djs"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/personal_mymessage_rightimg"
                        android:layout_marginRight="8dip"
                        />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:background="@color/fengexian_color"
                    ></View>

                <RelativeLayout
                    android:id="@+id/personal_yijinafank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_yjfk"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意见反馈"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/fengexian_color"
                    ></View>


                <RelativeLayout
                    android:id="@+id/personal_changjianwenti"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_cjwt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="常见问题"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />


                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/fengexian_color"
                    ></View>


                <RelativeLayout
                    android:id="@+id/personal_sehzhi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_lineheight"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/personal_shezhi"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:textColor="@color/text_blanck_color"
                            android:textSize="@dimen/textSize13sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/fengexian_color"
                    ></View>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
