<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/my_actionbar"></include>



    <com.zlkj.jianjie.myview.PullToRefreshView
        android:id="@+id/xyk_pulltorefreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:visibility="visible"
                    >

                    <com.zlkj.jianjie.myview.Myviewpagers
                        android:id="@+id/daikuan_myviewpages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                    </com.zlkj.jianjie.myview.Myviewpagers>
                    <LinearLayout
                        android:id="@+id/ll_bottomNavPoint"
                        android:layout_width="match_parent"
                        android:layout_height="35dip"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="@color/All_transparent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/ll_focus_indicator_container3"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    android:background="@color/bg"
                    ></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textSize14sp"
                        android:text="热门申请"
                        android:textColor="@color/text_gray_color"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="10dip"

                        />

                    <!-- 热门申请开始-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginLeft="14dip"
                        android:layout_marginTop="10dip"
                        android:layout_marginRight="14dip"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:weightSum="2"
                            android:layout_marginRight="5dip"
                            >
                            <LinearLayout
                                android:id="@+id/fragment_remen_one"
                                android:layout_width="match_parent"
                                android:layout_height="80dip"

                                android:orientation="horizontal"
                                android:background="@mipmap/xinyongka_backoung"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:weightSum="1"
                                android:layout_marginBottom="5dip"
                                >

                                <ImageView
                                    android:id="@+id/xyk_bank_img1"
                                    android:layout_width="33dip"
                                    android:layout_height="33dip"

                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="6dip"
                                    >
                                    <TextView
                                        android:id="@+id/xyk_bank_text1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="招商银行"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize13sp"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:id="@+id/xyk_bank_text11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="免息期高达50天"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize12sp"
                                        android:layout_marginTop="10dip"
                                        />
                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/fragment_remen_threed"
                                android:layout_width="match_parent"
                                android:layout_height="80dip"

                                android:orientation="horizontal"
                                android:background="@mipmap/xinyongka_backoung"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="5dip"
                                android:weightSum="1"
                                >

                                <ImageView
                                    android:id="@+id/xyk_bank_img3"
                                    android:layout_width="33dip"
                                    android:layout_height="33dip"

                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="6dip"
                                    >
                                    <TextView
                                        android:id="@+id/xyk_bank_text3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="中信银行"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize13sp"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:id="@+id/xyk_bank_text33"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="免息期高达80天"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize12sp"
                                        android:layout_marginTop="10dip"
                                        />
                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dip"

                            >

                            <LinearLayout
                                android:id="@+id/fragment_remen_two"
                                android:layout_width="match_parent"
                                android:layout_height="80dip"

                                android:orientation="horizontal"
                                android:background="@mipmap/xinyongka_backoung"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:weightSum="1"
                                android:layout_marginBottom="5dip"
                                >

                                <ImageView
                                    android:id="@+id/xyk_bank_img2"
                                    android:layout_width="33dip"
                                    android:layout_height="33dip"

                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="6dip"
                                    >
                                    <TextView
                                        android:id="@+id/xyk_bank_text2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="光大银行"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize13sp"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:id="@+id/xyk_bank_text22"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="申请送好礼"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize12sp"
                                        android:layout_marginTop="10dip"
                                        />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fragment_remen_fouces"
                                android:layout_width="match_parent"
                                android:layout_height="80dip"

                                android:orientation="horizontal"
                                android:background="@mipmap/xinyongka_backoung"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="5dip"
                                android:weightSum="1"
                                >

                                <ImageView
                                    android:id="@+id/xyk_bank_img4"
                                    android:layout_width="33dip"
                                    android:layout_height="33dip"

                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center|left"
                                    android:layout_marginLeft="6dip"
                                    >
                                    <TextView
                                        android:id="@+id/xyk_bank_text4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="交通银行"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize13sp"
                                        android:gravity="center"
                                        />
                                    <TextView
                                        android:id="@+id/xyk_bank_text44"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="申请送好礼"
                                        android:textColor="@color/text_blanck_color"
                                        android:textSize="@dimen/textSize12sp"
                                        android:layout_marginTop="10dip"
                                        />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>
                    <!-- 热门申请结束-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dip"
                        android:background="@color/bg"
                        android:layout_marginTop="10dip"
                        ></View>

                    <!-- 小编推荐开始-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="小编推荐"
                            android:textSize="@dimen/textSize14sp"
                            android:textColor="@color/text_blanck_color"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="10dip"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:layout_marginTop="10dip"
                            android:background="@color/white"
                            >
                            <com.zlkj.jianjie.myview.MyListView
                                android:id="@+id/xinyongka_mylistview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:divider="@null"
                                android:dividerHeight="@null"
                                android:listSelector="@null"
                                android:background="#00000000"
                                android:cacheColorHint="#00000000"
                                android:headerDividersEnabled="false"
                                ></com.zlkj.jianjie.myview.MyListView>
                        </LinearLayout>

                    </LinearLayout>
                    <!-- 小编推荐结束-->



                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </com.zlkj.jianjie.myview.PullToRefreshView>





</LinearLayout>
