<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:orientation="vertical"
    android:background="@color/text_blue_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        >

        <ImageView
            android:id="@+id/myactionbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_count_img"
            android:padding="15dip"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:id="@+id/myactionbar_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页标题"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize16sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/myactionbar_righttext"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="5dip"
            android:visibility="gone"
            />


    </RelativeLayout>




</LinearLayout>
