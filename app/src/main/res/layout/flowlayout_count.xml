<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/bg"
                ></View>


            <RelativeLayout
                android:id="@+id/flowlayout_jibenxinxi"
                android:layout_width="match_parent"
                android:layout_height="45dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dip"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/personal_yjfk"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息认证"
                        android:textColor="@color/text_blanck_color"
                        android:textSize="@dimen/textSize12sp"
                        android:layout_marginLeft="3dip"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flowlayout_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dip"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去认证"
                    android:textColor="@color/text_red_color"
                    android:textSize="@dimen/textSize12sp"
                    android:background="@drawable/yuanjiao_red"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="4dip"
                    android:paddingBottom="4dip"
                    android:layout_toLeftOf="@id/flowlayout_img"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dip"
                    />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/bg"
                ></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="职业身份"
                    android:textColor="@color/text_blanck_color"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="10dip"
                    />

                <com.zlkj.jianjie.flowlayout.FlowTagLayout
                    android:id="@+id/flowlayout_flone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    >

                </com.zlkj.jianjie.flowlayout.FlowTagLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/text_gray_color"
                android:layout_marginTop="10dip"
                ></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="信用情况"
                    android:textColor="@color/text_blanck_color"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="10dip"
                    />

                <com.zlkj.jianjie.flowlayout.FlowTagLayout
                    android:id="@+id/flowlayout_flone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    >

                </com.zlkj.jianjie.flowlayout.FlowTagLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/text_gray_color"
                android:layout_marginTop="10dip"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="贷款用途"
                    android:textColor="@color/text_blanck_color"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="10dip"
                    />

                <com.zlkj.jianjie.flowlayout.FlowTagLayout
                    android:id="@+id/flowlayout_flone3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                </com.zlkj.jianjie.flowlayout.FlowTagLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/text_gray_color"
                android:layout_marginTop="10dip"
                ></View>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="重置"
                    android:textSize="@dimen/textSize15sp"
                    android:textColor="@color/flow_text_font"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/tab_flow_backoung"
                    android:button="@null"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="完成"
                    android:textSize="@dimen/textSize15sp"
                    android:textColor="@color/text_blanck_color"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/tab_flow_backoung"
                    android:button="@null"
                    />


            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
